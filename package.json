{
  "name": "amans_repuls_client",
  "productName": "Amans_Repuls_Client",
  "version": "1.20.9",
  "description": "Repuls.io client with Discord RPC and optimized performance",
  "main": "src/aman.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [],
  "author": "AmanLovesCats",
  "license": "MIT",
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-localshortcut": "^3.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "systeminformation": "^5.27.11"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^30.3.0",
    "electron-builder": "^26.0.12"
  },
  "config": {
    "forge": "./forge.config.js"
  },
"build": {
  "appId": "com.amansrepuls.client",
  "productName": "Amans Repuls Client",
  "directories": {
    "buildResources": "assets/icons",
    "output": "dist"
  },

  "files": [
    "src/**/*",
    "assets/**/*",
    "node_modules/**/*",
    "!*.ico",
    "!*.icns",
    "!*.png",
    "!icon.*",
    "!dist/**/*",
    "!build/**/*",
    "!.git/**/*"
  ],

  "extraResources": [
    {
      "from": "assets/icons/",
      "to": "icons/",
      "filter": ["**/*"]
    }
  ],

  "win": {
    "target": ["nsis", "portable"],
    "icon": "assets/icons/icon.ico"
  },
  "nsis": {
    "oneClick": false,                          
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,            
    "createStartMenuShortcut": true
  },

  "win": {
    "target": ["nsis", "portable"],
    "icon": "assets/icons/icon.ico"
  },
  "mac": {
    "icon": "assets/icons/faviconV2.icns"
  },
  "linux": {
    "icon": "assets/icons/icon.png",
    "target": ["AppImage", "deb"]
  },

  "publish": [
    {
      "provider": "github",
      "owner": "AmanLovesCats",
      "repo": "Amans-Repuls-Client"
    }
  ]
}
}
